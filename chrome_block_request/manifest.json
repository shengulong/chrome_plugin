{
  "manifest_version": 2,
  "name": "request_blocking",
  "version": "1.0",
  "author": "Sam Wang",
  "description": "拦截某类网站、某些js、某些css、某些图片等",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html",
    "default_title": "让浏览器自动拦截某些请求"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "unlimitedStorage"
  ]
}